<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniuxy.smart_community.dao.RbacMenuDao">

    <resultMap type="com.woniuxy.smart_community.entity.RbacMenu" id="RbacMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="menuname" column="menuname" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="fid" column="fid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RbacMenuMap">
        select
          id, icon, menuname, url, fid
        from rbac_menu
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RbacMenuMap">
        select
          id, icon, menuname, url, fid
        from rbac_menu
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="menuname != null and menuname != ''">
                and menuname = #{menuname}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="fid != null">
                and fid = #{fid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from rbac_menu
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="menuname != null and menuname != ''">
                and menuname = #{menuname}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="fid != null">
                and fid = #{fid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into rbac_menu(icon, menuname, url, fid)
        values (#{icon}, #{menuname}, #{url}, #{fid})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into rbac_menu(icon, menuname, url, fid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.icon}, #{entity.menuname}, #{entity.url}, #{entity.fid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into rbac_menu(icon, menuname, url, fid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.icon}, #{entity.menuname}, #{entity.url}, #{entity.fid})
        </foreach>
        on duplicate key update
        icon = values(icon),
        menuname = values(menuname),
        url = values(url),
        fid = values(fid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update rbac_menu
        <set>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="menuname != null and menuname != ''">
                menuname = #{menuname},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="fid != null">
                fid = #{fid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from rbac_menu where id = #{id}
    </delete>

</mapper>

